        function getValidarInformacionCliente() {
            /*validar datos adicionales para el envio de productos*/
            var tipo_des = $('#dwdespacho').val();
            if (tipo_des == '0') {
                toastr.error('Seleccione el tipo de despacho', 'Mensaje');
